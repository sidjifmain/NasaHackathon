<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    app:cardCornerRadius="40dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/closeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|top"
            android:background="@drawable/close" />


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            android:padding ="20dp"
            app:cardBackgroundColor="@color/acix_pox"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/elimet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Player #Mehdi invited you to a duel"
                    android:textColor="@color/black"
                    android:textSize="8sp"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="2 Hours ago"
                    android:textColor="@color/black"
                    android:textSize="5dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            android:padding ="20dp"
            app:cardBackgroundColor="@color/acix_pox"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/elimet" />

                <TextView
                    android:layout_width="127dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="16dp"
                    android:text="Everyone is looking for life on a new planet, have you discovered new planets?"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3 Hours ago"
                    android:textColor="@color/black"
                    android:textSize="5dp"
                    android:layout_marginStart="16dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            android:padding ="20dp"
            android:layout_marginBottom="200dp"
            app:cardBackgroundColor="@color/acix_pox"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/elimet" />

                <TextView
                    android:layout_width="132dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:text="tonight the moon will be in its full form. don't forget to sleep watching the moon"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="4 Hours ago"
                    android:textColor="@color/black"
                    android:textSize="5dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.cardview.widget.CardView>
