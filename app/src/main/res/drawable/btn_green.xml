<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Siyah kenar rengi -->
            <corners android:radius="24dp"/> <!-- Yuvarlak kenar radius değeri -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0F831E"/> <!-- Düğme arka plan rengi -->
            <corners android:radius="22dp"/> <!-- Yuvarlak kenar radius değeri, kenar şeridi kalınlığı kadar azaltın -->
        </shape>
    </item>
</layer-list>
